# Database Configuration
DATABASE_URL=postgresql://docshare_user:docshare_password@localhost:5434/document_sharing
DB_HOST=localhost
DB_PORT=5434
DB_NAME=document_sharing
DB_USER=docshare_user
DB_PASSWORD=docshare_password
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6381
REDIS_HOST=localhost
REDIS_PORT=6381

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=your-super-secret-encryption-key-32-chars

# Storage Configuration
STORAGE_TYPE=local  # 'local' or 's3'
LOCAL_STORAGE_PATH=./uploads

# AWS S3 Configuration (if using S3)
AWS_S3_BUCKET=your-documents-bucket
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
CDN_URL=https://your-cdn-domain.com

# API Configuration
PORT=4000
NODE_ENV=development
BASE_URL=http://localhost:4000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# External Service URLs
ANALYTICS_SERVICE_URL=http://localhost:4001
FILE_PROCESSOR_URL=http://localhost:4002
NOTIFICATION_SERVICE_URL=http://localhost:4003

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password
FROM_EMAIL=noreply@document-sharing.com
FROM_NAME=Document Sharing Service

# Security
BCRYPT_ROUNDS=12
WEBHOOK_SECRET=your-webhook-secret
API_RATE_LIMIT=1000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Features
ENABLE_VIRUS_SCANNING=false
VIRUS_TOTAL_API_KEY=your-virus-total-api-key
ENABLE_WATERMARKING=true
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,xls,xlsx,txt

# Analytics
ENABLE_GEOIP=true
ENABLE_USER_AGENT_TRACKING=true
ANALYTICS_RETENTION_DAYS=365