{
  "name": "@document-sharing/notification-service",
  "version": "1.0.0",
  "description": "Notification service for document sharing platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@document-sharing/core": "workspace:*",
    "express": "^4.18.0",
    "nodemailer": "^6.9.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.0",
    "uuid": "^9.0.0",
    "redis": "^4.6.0",
    "joi": "^17.9.0",
    "handlebars": "^4.7.7",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/nodemailer": "^6.4.0",
    "@types/handlebars": "^4.1.0",
    "@types/lodash": "^4.14.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "keywords": [
    "notifications",
    "email",
    "push",
    "document-sharing"
  ]
}
