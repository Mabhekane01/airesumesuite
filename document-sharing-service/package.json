{
  "name": "document-sharing-service",
  "version": "1.0.0",
  "description": "A comprehensive document sharing platform with analytics, similar to Papermark",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api-gateway\" \"npm run dev:analytics\" \"npm run dev:file-processor\" \"npm run dev:notifications\"",
    "dev:api-gateway": "cd packages/api-gateway && npm run dev",
    "dev:analytics": "cd packages/analytics-engine && npm run dev",
    "dev:file-processor": "cd packages/file-processor && npm run dev",
    "dev:notifications": "cd packages/notification-service && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}