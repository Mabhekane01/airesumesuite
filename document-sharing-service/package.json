{
  "name": "document-sharing-service",
  "version": "1.0.0",
  "description": "Enterprise-grade document sharing and analytics platform",
  "main": "packages/api-gateway/src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:analytics\" \"npm run dev:file-processor\" \"npm run dev:notifications\"",
    "dev:api": "cd packages/api-gateway && npm run dev",
    "dev:analytics": "cd packages/analytics-engine && npm run dev",
    "dev:file-processor": "cd packages/file-processor && npm run dev",
    "dev:notifications": "cd packages/notification-service && npm run dev",
    "build": "npm run build:api && npm run build:analytics && npm run build:file-processor && npm run build:notifications",
    "build:api": "cd packages/api-gateway && npm run build",
    "build:analytics": "cd packages/analytics-engine && npm run build",
    "build:file-processor": "cd packages/file-processor && npm run build",
    "build:notifications": "cd packages/notification-service && npm run build",
    "start": "cd packages/api-gateway && npm start",
    "test": "npm run test:api && npm run test:analytics && npm run test:file-processor && npm run test:notifications",
    "test:api": "cd packages/api-gateway && npm test",
    "test:analytics": "cd packages/analytics-engine && npm test",
    "test:file-processor": "cd packages/file-processor && npm test",
    "test:notifications": "cd packages/notification-service && npm test",
    "lint": "npm run lint:api && npm run lint:analytics && npm run lint:file-processor && npm run lint:notifications",
    "lint:api": "cd packages/api-gateway && npm run lint",
    "lint:analytics": "cd packages/analytics-engine && npm run lint",
    "lint:file-processor": "cd packages/file-processor && npm run lint",
    "lint:notifications": "cd packages/notification-service && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd packages/core && npm run migrate",
    "db:seed": "cd packages/core && npm run seed",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "keywords": [
    "document-sharing",
    "analytics",
    "file-processing",
    "enterprise",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "AI Job Suite Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
