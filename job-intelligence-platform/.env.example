# Job Intelligence Platform - Environment Variables
# Copy to .env and update values for your environment

# Database
DATABASE_URL=postgresql://jobint_user:jobint_password@localhost:5432/job_intelligence
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=job_intelligence
DATABASE_USER=jobint_user
DATABASE_PASSWORD=jobint_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Service URLs (for inter-service communication)
API_GATEWAY_URL=http://localhost:3000
SCRAPER_SERVICE_URL=http://localhost:3001
ETL_SERVICE_URL=http://localhost:3002
SCHEDULER_SERVICE_URL=http://localhost:3003
AI_SERVICE_URL=http://localhost:8000

# External APIs (add your API keys)
INDEED_API_KEY=your_indeed_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
GLASSDOOR_API_KEY=your_glassdoor_api_key

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Security
JWT_SECRET=your_jwt_secret_key
API_RATE_LIMIT=100  # requests per minute

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Scraper Settings
MAX_CONCURRENT_SCRAPERS=5
SCRAPER_DELAY_MS=1000
USER_AGENT=JobIntelligencePlatform/1.0

# Queue Settings
QUEUE_CONCURRENCY=10
QUEUE_RETRY_ATTEMPTS=3