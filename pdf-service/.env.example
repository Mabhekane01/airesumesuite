# ============================================
# PDF Service Environment Variables
# Copy this file to .env and update values
# ============================================

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api/pdf
APP_NAME=pdf-service

# ========================================
# ENVIRONMENT
# ========================================
SPRING_PROFILES_ACTIVE=prod

# ========================================
# FILE PROCESSING LIMITS
# ========================================
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=100MB

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ========================================
# PERFORMANCE SETTINGS
# ========================================
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_THREADS=10
TOMCAT_MAX_CONNECTIONS=8192
TOMCAT_ACCEPT_COUNT=100
TOMCAT_MAX_SWALLOW_SIZE=100MB
TOMCAT_MAX_HTTP_POST_SIZE=100MB
TOMCAT_CONNECTION_TIMEOUT=20000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SAMBOX=WARN
LOG_LEVEL_PDFBOX=WARN
LOG_LEVEL_SPRING_WEB=WARN

LOG_FILE_PATH=./logs/pdf-service.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30
LOG_FILE_TOTAL_SIZE=1GB

# ========================================
# PDF PROCESSING CONFIGURATION
# ========================================
PDF_MEMORY_MAX=512MB
PDF_TEMP_DIR=./temp/pdf
PDF_MAX_PAGES=1000
PDF_PROCESSING_TIMEOUT=300

# Cleanup settings (in milliseconds)
PDF_TEMP_CLEANUP_INTERVAL=3600000
PDF_TEMP_CLEANUP_AGE=1800000

# ========================================
# MONITORING & HEALTH
# ========================================
ENABLE_METRICS=false
ENABLE_PROMETHEUS=false
ACTUATOR_ENDPOINTS=health,info
HEALTH_DISK_THRESHOLD=100MB

# ========================================
# FEATURE FLAGS
# ========================================
OCR_ENABLED=false
DIGITAL_SIGNATURE_ENABLED=true
WATERMARK_ENABLED=true
SECURITY_ENABLED=true
OPTIMIZATION_ENABLED=true

# ========================================
# EXTERNAL SERVICES (OPTIONAL)
# ========================================
# OCR_SERVICE_URL=
# OCR_SERVICE_API_KEY=
# OCR_SERVICE_TIMEOUT=30000

# ========================================
# RATE LIMITING (OPTIONAL)
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000

# ========================================
# JVM SETTINGS
# ========================================
JAVA_OPTS=-Xms512m -Xmx2048m -XX:+UseG1GC -XX:G1HeapRegionSize=16m -XX:+UseStringDeduplication